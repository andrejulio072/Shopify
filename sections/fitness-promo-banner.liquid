<style>
  .fitness-promo-banner {
    background: linear-gradient(135deg, #FF6B35 0%, #E74C3C 100%);
    color: white;
    padding: 8px 0;
    text-align: center;
    font-size: 14px;
    font-weight: 600;
    position: relative;
    overflow: hidden;
  }

  .fitness-promo-banner__content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 16px;
  }

  .fitness-promo-banner__text {
    display: flex;
    align-items: center;
    gap: 8px;
    flex: 1;
  }

  .fitness-promo-banner__icon {
    font-size: 16px;
    animation: pulse 2s infinite;
  }

  .fitness-promo-banner__whatsapp {
    background: #25D366;
    color: white;
    padding: 4px 12px;
    border-radius: 20px;
    text-decoration: none;
    font-size: 12px;
    font-weight: bold;
    transition: transform 0.2s ease;
  }

  .fitness-promo-banner__whatsapp:hover {
    transform: scale(1.05);
    color: white;
  }

  .fitness-promo-banner__badges {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
  }

  .trust-badge {
    font-size: 12px;
    opacity: 0.9;
  }

  @keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }

  @media screen and (max-width: 749px) {
    .fitness-promo-banner__content {
      flex-direction: column;
      gap: 8px;
    }

    .fitness-promo-banner__badges {
      gap: 8px;
    }

    .trust-badge {
      font-size: 11px;
    }
  }
</style>

