{{ 'premium-categories.css' | asset_url | stylesheet_tag }}

<style>
  .premium-categories {
    padding: 100px 0;
    background: #ffffff;
  }

  .premium-categories__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .premium-categories__header {
    text-align: center;
    margin-bottom: 60px;
  }

  .premium-categories__title {
                    </h3>

                <h3 class="category-card__title">
                  {%- if block.settings.title != blank -%}
                    {{ block.settings.title }}
                  {%- elsif block.settings.collection != blank -%}
                    {{ collections[block.settings.collection].title }}
                  {%- else -%}
                    Categoria
                  {%- endif -%}
                </h3>

                {%- if block.settings.description != blank -%}amp(2rem, 4vw, 3rem);
    font-weight: 800;
    color: #000000;
    margin-bottom: 15px;
    letter-spacing: -0.02em;
  }

  .premium-categories__subtitle {
    font-size: 18px;
    color: #6c757d;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .premium-categories__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 30px;
  }

  .premium-categories__grid--two {
    grid-template-columns: repeat(2, 1fr);
  }

  .premium-categories__grid--three {
    grid-template-columns: repeat(3, 1fr);
  }

  .category-card {
    position: relative;
    height: 400px;
    border-radius: 12px;
    overflow: hidden;
    cursor: pointer;
    transition: all 0.4s ease;
    background: #f8f9fa;
  }

  .category-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
  }

  .category-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .category-card:hover .category-card__image {
    transform: scale(1.05);
  }

  .category-card__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.1) 0%,
      rgba(0, 0, 0, 0.3) 50%,
      rgba(0, 0, 0, 0.7) 100%
    );
    opacity: 0.8;
    transition: opacity 0.3s ease;
  }

  .category-card:hover .category-card__overlay {
    opacity: 0.9;
  }

  .category-card__content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 30px;
    color: #ffffff;
    z-index: 2;
  }

  .category-card__badge {
    display: inline-block;
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    color: #ffffff;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 10px;
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  .category-card__title {
    font-size: 28px;
    font-weight: 800;
    margin-bottom: 8px;
    line-height: 1.2;
  }

  .category-card__description {
    font-size: 16px;
    opacity: 0.9;
    margin-bottom: 20px;
    line-height: 1.5;
  }

  .category-card__cta {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    color: #ffffff;
    padding: 12px 24px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    font-size: 14px;
    border: 1px solid rgba(255, 255, 255, 0.3);
    transition: all 0.3s ease;
  }

  .category-card__cta:hover {
    background: rgba(255, 255, 255, 0.25);
    transform: translateY(-2px);
    color: #ffffff;
  }

  .category-card__cta-arrow {
    transition: transform 0.3s ease;
  }

  .category-card:hover .category-card__cta-arrow {
    transform: translateX(4px);
  }

  .category-card__stats {
    position: absolute;
    top: 20px;
    right: 20px;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    color: #ffffff;
    padding: 10px 15px;
    border-radius: 8px;
    text-align: center;
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  .category-card__stats-number {
    display: block;
    font-size: 18px;
    font-weight: 700;
    line-height: 1;
  }

  .category-card__stats-label {
    font-size: 11px;
    opacity: 0.8;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  /* Special Layout: Featured + Grid */
  .premium-categories__grid--featured {
    display: grid;
    grid-template-columns: 2fr 1fr;
    grid-template-rows: repeat(2, 1fr);
    gap: 30px;
    height: 600px;
  }

  .category-card--featured {
    grid-row: span 2;
    height: 100%;
  }

  .category-card--featured .category-card__title {
    font-size: 36px;
  }

  .category-card--featured .category-card__description {
    font-size: 18px;
    max-width: 400px;
  }

  /* Gender Split Layout */
  .premium-categories__grid--gender {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 30px;
    height: 500px;
  }

  .category-card--gender {
    height: 100%;
  }

  .category-card--gender .category-card__content {
    text-align: center;
    top: 50%;
    transform: translateY(-50%);
    bottom: auto;
  }

  /* Responsive */
  @media screen and (max-width: 1200px) {
    .premium-categories__grid--featured {
      grid-template-columns: 1fr;
      grid-template-rows: auto;
      height: auto;
    }

    .category-card--featured {
      grid-row: span 1;
      height: 400px;
    }
  }

  @media screen and (max-width: 990px) {
    .premium-categories {
      padding: 80px 0;
    }

    .premium-categories__grid,
    .premium-categories__grid--two,
    .premium-categories__grid--three,
    .premium-categories__grid--gender {
      grid-template-columns: 1fr;
    }

    .premium-categories__grid--gender {
      height: auto;
    }

    .category-card,
    .category-card--gender {
      height: 350px;
    }

    .category-card--featured .category-card__title {
      font-size: 28px;
    }
  }

  @media screen and (max-width: 768px) {
    .premium-categories {
      padding: 60px 0;
    }

    .premium-categories__container {
      padding: 0 15px;
    }

    .premium-categories__grid {
      gap: 20px;
    }

    .category-card {
      height: 300px;
    }

    .category-card__content {
      padding: 20px;
    }

    .category-card__title {
      font-size: 24px;
    }

    .category-card__description {
      font-size: 14px;
    }

    .category-card__stats {
      top: 15px;
      right: 15px;
      padding: 8px 12px;
    }
  }

  /* Animation */
  .category-card {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.6s ease forwards;
  }

  .category-card:nth-child(1) { animation-delay: 0.1s; }
  .category-card:nth-child(2) { animation-delay: 0.2s; }
  .category-card:nth-child(3) { animation-delay: 0.3s; }
  .category-card:nth-child(4) { animation-delay: 0.4s; }
  .category-card:nth-child(5) { animation-delay: 0.5s; }
  .category-card:nth-child(6) { animation-delay: 0.6s; }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<section class="premium-categories">
  <div class="premium-categories__container">

    {%- unless section.settings.title == blank -%}
      <div class="premium-categories__header">
        <h2 class="premium-categories__title">{{ section.settings.title }}</h2>
        {%- unless section.settings.subtitle == blank -%}
          <p class="premium-categories__subtitle">{{ section.settings.subtitle }}</p>
        {%- endunless -%}
      </div>
    {%- endunless -%}

    <div class="premium-categories__grid premium-categories__grid--{{ section.settings.layout }}">
      {%- for block in section.blocks limit: 6 -%}
        {%- case block.type -%}
          {%- when 'category' -%}
            <div class="category-card {% if section.settings.layout == 'featured' and forloop.first %}category-card--featured{% elsif section.settings.layout == 'gender' %}category-card--gender{% endif %}" {{ block.shopify_attributes }}>

              {%- if block.settings.collection != blank -%}
                {%- assign collection = collections[block.settings.collection] -%}
                <a href="{{ collection.url }}" style="display: block; height: 100%; text-decoration: none;">
              {%- elsif block.settings.link != blank -%}
                <a href="{{ block.settings.link }}" style="display: block; height: 100%; text-decoration: none;">
              {%- endif -%}

              {%- if block.settings.image != blank -%}
                {{
                  block.settings.image
                  | image_url: width: 800
                  | image_tag:
                    loading: 'lazy',
                    class: 'category-card__image',
                    alt: block.settings.title | escape
                }}
              {%- elsif block.settings.collection != blank and collection.featured_image -%}
                {{
                  collection.featured_image
                  | image_url: width: 800
                  | image_tag:
                    loading: 'lazy',
                    class: 'category-card__image',
                    alt: collection.title | escape
                }}
              {%- else -%}
                <div style="width: 100%; height: 100%; background: linear-gradient(135deg, #6c757d 0%, #495057 100%);"></div>
              {%- endif -%}

              <div class="category-card__overlay"></div>

              {%- if block.settings.show_stats and block.settings.collection != blank -%}
                <div class="category-card__stats">
                  <span class="category-card__stats-number">{{ collections[block.settings.collection].all_products_count }}</span>
                  <span class="category-card__stats-label">Produtos</span>
                </div>
              {%- endif -%}

              <div class="category-card__content">
                {%- unless block.settings.badge == blank -%}
                  <span class="category-card__badge">{{ block.settings.badge }}</span>
                {%- endunless -%}

                <h3 class="category-card__title">
                  {%- unless block.settings.title == blank -%}
                    {{ block.settings.title }}
                  {%- elsif block.settings.collection != blank -%}
                    {{ collections[block.settings.collection].title }}
                  {%- else -%}
                    Categoria
                  {%- endif -%}
                </h3>

                {%- if block.settings.description != blank -%}
                  <p class="category-card__description">{{ block.settings.description }}</p>
                {%- elsif block.settings.collection != blank and collections[block.settings.collection].description != blank -%}
                  <p class="category-card__description">{{ collections[block.settings.collection].description | truncate: 120 }}</p>
                {%- endif -%}

                <span class="category-card__cta">
                  {{ block.settings.button_text | default: 'Explorar' }}
                  <span class="category-card__cta-arrow">→</span>
                </span>
              </div>

              {%- if block.settings.collection != blank or block.settings.link != blank -%}
                </a>
              {%- endif -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</section>

