<link rel="stylesheet" href="{{ 'premium-v2.css' | asset_url }}">

<style>
  .premium-footer-v2 {
    background: var(--color-black);
    color: var(--color-white);
    padding: var(--space-16) 0 var(--space-8);
  }

  .footer-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--space-5);
  }

  .footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-10);
    margin-bottom: var(--space-10);
  }

  .footer-column h3 {
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    color: var(--color-white);
    margin-bottom: var(--space-4);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .footer-links {
    list-style: none;
    padding: 0;
  }

  .footer-links li {
    margin-bottom: var(--space-3);
  }

  .footer-links a {
    color: var(--color-gray-400);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-links a:hover {
    color: var(--color-electric-blue);
  }

  .footer-bottom {
    border-top: 1px solid var(--color-gray-800);
    padding-top: var(--space-6);
    text-align: center;
    color: var(--color-gray-500);
    font-size: var(--text-sm);
  }
</style>

<footer class="premium-footer-v2">
  <div class="footer-container">
    <div class="footer-grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'column' %}
            <div class="footer-column">
              <h3>{{ block.settings.title }}</h3>
              <ul class="footer-links">
                {% if block.settings.menu != blank %}
                  {% for link in linklists[block.settings.menu].links %}
                    <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                  {% endfor %}
                {% endif %}
              </ul>
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    <div class="footer-bottom">
      <p>{{ section.settings.copyright | default: 'Â© 2025 All rights reserved' }}</p>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer V2",
  "tag": "footer",
  "class": "premium-footer-v2",
  "settings": [
    {
      "type": "text",
      "id": "copyright",
      "label": "Copyright Text",
      "default": "Â© 2025 All rights reserved"
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Footer Column",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Column Title"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer V2",
      "blocks": [
        {
          "type": "column",
          "settings": {
            "title": "Shop"
          }
        },
        {
          "type": "column",
          "settings": {
            "title": "About"
          }
        },
        {
          "type": "column",
          "settings": {
            "title": "Support"
          }
        }
      ]
    }
  ]
}
{% endschema %}
