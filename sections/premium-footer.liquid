          <!-- Newsletter -->
          {%- if section.settings.show_newsletter -%}
            <div class="premium-footer__newsletter">
              <h3 class="premium-footer__newsletter-title">{{ section.settings.newsletter_title | default: 'Newsletter' }}</h3>
              <form class="premium-footer__newsletter-form" action="{{ routes.root_url }}contact#contact_form" method="post" accept-charset="UTF-8">
                <input type="hidden" name="form_type" value="customer">
                <input type="hidden" name="utf8" value="✓">
                <input type="hidden" name="contact[tags]" value="newsletter">
                <input
                  type="email"
                  name="contact[email]"
                  class="premium-footer__newsletter-input"
                  placeholder="{{ section.settings.newsletter_placeholder | default: 'Seu e-mail' }}"
                  required
                >
                <button type="submit" class="premium-footer__newsletter-button">
                  {{ section.settings.newsletter_button | default: 'Assinar' }}
                </button>
              </form>
            </div>
          {%- endif -%}
        </div>

        <!-- Menu Columns -->
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'menu' -%}
              <div class="premium-footer__menu" {{ block.shopify_attributes }}>
                <h3 class="premium-footer__menu-title">{{ block.settings.title }}</h3>
                <ul class="premium-footer__menu-list">
                  {%- for link in linklists[block.settings.menu].links -%}
                    <li class="premium-footer__menu-item">
                      <a href="{{ link.url }}" class="premium-footer__menu-link">{{ link.title }}</a>
                    </li>
                  {%- endfor -%}
                </ul>
              </div>

            {%- when 'contact' -%}
              <div class="premium-footer__menu" {{ block.shopify_attributes }}>
                <h3 class="premium-footer__menu-title">{{ block.settings.title | default: 'Contato' }}</h3>
                
                {%- unless block.settings.address == blank -%}
                  <div class="premium-footer__contact-item">
                    <span class="premium-footer__contact-icon">📍</span>
                    <span>{{ block.settings.address }}</span>
                  </div>
                {%- endunless -%}

                {%- unless block.settings.phone == blank -%}
                  <div class="premium-footer__contact-item">
                    <span class="premium-footer__contact-icon">📞</span>
                    <a href="tel:{{ block.settings.phone }}" class="premium-footer__menu-link">{{ block.settings.phone }}</a>
                  </div>
                {%- endunless -%}

                {%- unless block.settings.email == blank -%}
                  <div class="premium-footer__contact-item">
                    <span class="premium-footer__contact-icon">✉️</span>
                    <a href="mailto:{{ block.settings.email }}" class="premium-footer__menu-link">{{ block.settings.email }}</a>
                  </div>
                {%- endunless -%}

                {%- unless block.settings.hours == blank -%}
                  <div class="premium-footer__contact-item">
                    <span class="premium-footer__contact-icon">🕒</span>
                    <span>{{ block.settings.hours }}</span>
                  </div>
                {%- endunless -%}
              </div>
          {%- endcase -%}
        {%- endfor -%}

      </div>
    </div>
  </div>

  <!-- Bottom Section -->
  <div class="premium-footer__bottom">
    <div class="premium-footer__container">
      <div class="premium-footer__bottom-content">
        <div class="premium-footer__copyright">
          {{ section.settings.copyright | default: '© 2024 ' | append: shop.name | append: '. Todos os direitos reservados.' }}
        </div>

        {%- if section.settings.show_policies -%}
          <div class="premium-footer__policies">
            {%- for policy in shop.policies -%}
              {%- if policy != blank -%}
                <a href="{{ policy.url }}" class="premium-footer__policy-link">{{ policy.title }}</a>
              {%- endif -%}
            {%- endfor -%}
          </div>
        {%- endif -%}

        {%- if section.settings.show_payments -%}
          <div class="premium-footer__payments">
            {%- for payment_type in shop.enabled_payment_types -%}
              <span class="premium-footer__payment-icon">
                {{ payment_type | payment_type_svg_tag }}
              </span>
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</footer>

