{{ 'premium-footer.css' | asset_url | stylesheet_tag }}

<style>
  .premium-footer {
    background: #000000;
    color: #ffffff;
    position: relative;
    overflow: hidden;
  }

  .premium-footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent 0%, #333333 50%, transparent 100%);
  }

  .premium-footer__main {
    padding: 80px 0 40px;
    border-bottom: 1px solid #1a1a1a;
  }

  .premium-footer__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .premium-footer__content {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr 1fr;
    gap: 60px;
    margin-bottom: 60px;
  }

  /* Brand Column */
  .premium-footer__brand {
    padding-right: 40px;
  }

  .premium-footer__logo {
    margin-bottom: 30px;
  }

  .premium-footer__logo img {
    height: 40px;
    width: auto;
  }

  .premium-footer__logo-text {
    font-size: 24px;
    font-weight: 800;
    color: #ffffff;
    text-decoration: none;
    letter-spacing: -0.5px;
  }

  .premium-footer__description {
    font-size: 16px;
    line-height: 1.6;
    color: #999999;
    margin-bottom: 30px;
  }

  .premium-footer__social {
    display: flex;
    gap: 15px;
    margin-bottom: 30px;
  }

  .premium-footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: #1a1a1a;
    border-radius: 8px;
    color: #ffffff;
    text-decoration: none;
    transition: all 0.3s ease;
    border: 1px solid #333333;
  }

  .premium-footer__social-link:hover {
    background: #ffffff;
    color: #000000;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(255, 255, 255, 0.1);
  }

  .premium-footer__newsletter {
    margin-top: 20px;
  }

  .premium-footer__newsletter-title {
    font-size: 16px;
    font-weight: 600;
    color: #ffffff;
    margin-bottom: 15px;
  }

  .premium-footer__newsletter-form {
    display: flex;
    gap: 10px;
  }

  .premium-footer__newsletter-input {
    flex: 1;
    padding: 12px 16px;
    background: #1a1a1a;
    border: 1px solid #333333;
    border-radius: 6px;
    color: #ffffff;
    font-size: 14px;
    transition: border-color 0.3s ease;
  }

  .premium-footer__newsletter-input:focus {
    outline: none;
    border-color: #ffffff;
  }

  .premium-footer__newsletter-input::placeholder {
    color: #666666;
  }

  .premium-footer__newsletter-button {
    padding: 12px 20px;
    background: #ffffff;
    color: #000000;
    border: none;
    border-radius: 6px;
    font-weight: 600;
    font-size: 14px;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .premium-footer__newsletter-button:hover {
    background: #f0f0f0;
    transform: translateY(-1px);
  }

  /* Menu Columns */
  .premium-footer__menu {
    min-width: 0;
  }

  .premium-footer__menu-title {
    font-size: 16px;
    font-weight: 700;
    color: #ffffff;
    margin-bottom: 25px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .premium-footer__menu-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .premium-footer__menu-item {
    margin-bottom: 12px;
  }

  .premium-footer__menu-link {
    color: #999999;
    text-decoration: none;
    font-size: 14px;
    line-height: 1.5;
    transition: color 0.3s ease;
    display: block;
  }

  .premium-footer__menu-link:hover {
    color: #ffffff;
  }

  /* Contact Info */
  .premium-footer__contact-item {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    margin-bottom: 20px;
    color: #999999;
    font-size: 14px;
    line-height: 1.5;
  }

  .premium-footer__contact-icon {
    color: #ffffff;
    margin-top: 2px;
  }

  /* Bottom Section */
  .premium-footer__bottom {
    padding: 30px 0;
    background: #0a0a0a;
  }

  .premium-footer__bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
  }

  .premium-footer__copyright {
    color: #666666;
    font-size: 14px;
  }

  .premium-footer__policies {
    display: flex;
    gap: 30px;
    flex-wrap: wrap;
  }

  .premium-footer__policy-link {
    color: #999999;
    text-decoration: none;
    font-size: 14px;
    transition: color 0.3s ease;
  }

  .premium-footer__policy-link:hover {
    color: #ffffff;
  }

  .premium-footer__payments {
    display: flex;
    gap: 15px;
    align-items: center;
  }

  .premium-footer__payment-icon {
    height: 24px;
    width: auto;
    opacity: 0.7;
    transition: opacity 0.3s ease;
  }

  .premium-footer__payment-icon:hover {
    opacity: 1;
  }

  /* Responsive */
  @media screen and (max-width: 1200px) {
    .premium-footer__content {
      grid-template-columns: 2fr 1fr 1fr 1fr;
      gap: 40px;
    }
  }

  @media screen and (max-width: 990px) {
    .premium-footer__content {
      grid-template-columns: 1fr 1fr;
      gap: 40px;
    }

    .premium-footer__brand {
      padding-right: 0;
    }

    .premium-footer__main {
      padding: 60px 0 30px;
    }
  }

  @media screen and (max-width: 768px) {
    .premium-footer__content {
      grid-template-columns: 1fr;
      gap: 40px;
      margin-bottom: 40px;
    }

    .premium-footer__container {
      padding: 0 15px;
    }

    .premium-footer__main {
      padding: 50px 0 25px;
    }

    .premium-footer__bottom-content {
      flex-direction: column;
      text-align: center;
      gap: 15px;
    }

    .premium-footer__policies {
      justify-content: center;
    }

    .premium-footer__newsletter-form {
      flex-direction: column;
    }

    .premium-footer__social {
      justify-content: center;
    }
  }

  @media screen and (max-width: 480px) {
    .premium-footer__policies {
      flex-direction: column;
      gap: 15px;
    }

    .premium-footer__payments {
      flex-wrap: wrap;
      justify-content: center;
    }
  }

  /* Animation */
  .premium-footer__menu,
  .premium-footer__brand {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease forwards;
  }

  .premium-footer__brand { animation-delay: 0.1s; }
  .premium-footer__menu:nth-child(2) { animation-delay: 0.2s; }
  .premium-footer__menu:nth-child(3) { animation-delay: 0.3s; }
  .premium-footer__menu:nth-child(4) { animation-delay: 0.4s; }
  .premium-footer__menu:nth-child(5) { animation-delay: 0.5s; }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

