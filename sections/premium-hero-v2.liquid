<link rel="stylesheet" href="{{ 'premium-v2.css' | asset_url }}">

<style>
  .premium-hero-v2 {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    overflow: hidden;
    background: linear-gradient(135deg, var(--color-black) 0%, var(--color-charcoal) 100%);
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .hero-background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.7;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(0, 0, 0, 0.8) 0%,
      rgba(0, 0, 0, 0.4) 50%,
      rgba(0, 122, 255, 0.2) 100%
    );
    z-index: 2;
  }

  .hero-content {
    position: relative;
    z-index: 3;
    color: var(--color-white);
    width: 100%;
    padding: var(--space-20) 0;
  }

  .hero-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-12);
    align-items: center;
  }

  .hero-text {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-4);
    background: linear-gradient(135deg, var(--color-electric-blue) 0%, var(--color-neon-green) 100%);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-6);
    animation: slide-up 0.8s ease-out;
  }

  .hero-title {
    font-size: clamp(var(--text-4xl), 8vw, var(--text-6xl));
    font-weight: var(--font-black);
    line-height: 0.9;
    letter-spacing: -0.03em;
    margin-bottom: var(--space-6);
    text-transform: uppercase;
    animation: slide-up 0.8s ease-out 0.2s both;
  }

  .hero-title-gradient {
    background: linear-gradient(135deg, var(--color-white) 0%, var(--color-electric-blue) 50%, var(--color-neon-green) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: var(--text-xl);
    font-weight: var(--font-medium);
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: var(--space-8);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
    animation: slide-up 0.8s ease-out 0.4s both;
  }

  .hero-actions {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    align-items: center;
    animation: slide-up 0.8s ease-out 0.6s both;
  }

  .hero-primary-btn {
    background: linear-gradient(135deg, var(--color-electric-blue) 0%, #0056CC 100%);
    color: var(--color-white);
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: var(--space-5) var(--space-10);
    border-radius: var(--radius-xl);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: var(--space-3);
    box-shadow: 0 10px 30px rgba(0, 122, 255, 0.3);
    transition: var(--transition-normal);
    position: relative;
    overflow: hidden;
  }

  .hero-primary-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: var(--transition-slow);
  }

  .hero-primary-btn:hover::before {
    left: 100%;
  }

  .hero-primary-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 40px rgba(0, 122, 255, 0.4);
  }

  .hero-secondary-btn {
    background: transparent;
    color: var(--color-white);
    border: 2px solid rgba(255, 255, 255, 0.3);
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: var(--space-4) var(--space-8);
    border-radius: var(--radius-xl);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    transition: var(--transition-normal);
    backdrop-filter: blur(10px);
  }

  .hero-secondary-btn:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: var(--color-white);
    transform: translateY(-2px);
  }

  .hero-stats {
    display: flex;
    gap: var(--space-8);
    justify-content: center;
    margin-top: var(--space-12);
    animation: fade-in 1s ease-out 0.8s both;
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    font-size: var(--text-3xl);
    font-weight: var(--font-black);
    color: var(--color-electric-blue);
    display: block;
    line-height: 1;
  }

  .stat-label {
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: rgba(255, 255, 255, 0.7);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-top: var(--space-1);
  }

  .hero-scroll-indicator {
    position: absolute;
    bottom: var(--space-8);
    left: 50%;
    transform: translateX(-50%);
    z-index: 3;
    animation: bounce 2s infinite;
  }

  .scroll-arrow {
    color: var(--color-white);
    opacity: 0.7;
  }

  /* FLOATING ELEMENTS */
  .floating-element {
    position: absolute;
    z-index: 2;
    opacity: 0.1;
    animation: float 6s ease-in-out infinite;
  }

  .floating-element:nth-child(1) {
    top: 20%;
    left: 10%;
    animation-delay: 0s;
  }

  .floating-element:nth-child(2) {
    top: 60%;
    right: 15%;
    animation-delay: 2s;
  }

  .floating-element:nth-child(3) {
    bottom: 30%;
    left: 20%;
    animation-delay: 4s;
  }

  /* RESPONSIVE */
  @media (min-width: 768px) {
    .hero-actions {
      flex-direction: row;
      justify-content: center;
    }

    .hero-stats {
      gap: var(--space-12);
    }
  }

  @media (min-width: 1024px) {
    .hero-grid {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-16);
      text-align: left;
    }

    .hero-text {
      text-align: left;
      margin: 0;
    }

    .hero-actions {
      justify-content: flex-start;
    }
  }

  /* ANIMATIONS */
  @keyframes bounce {
    0%, 20%, 53%, 80%, 100% {
      transform: translate(-50%, 0);
    }
    40%, 43% {
      transform: translate(-50%, -10px);
    }
    70% {
      transform: translate(-50%, -5px);
    }
    90% {
      transform: translate(-50%, -2px);
    }
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }

  .parallax-bg {
    will-change: transform;
    transition: transform 0.1s ease-out;
  }
</style>

<section class="premium-hero-v2">
  <!-- Background Image -->
  <div class="hero-background parallax-bg">
    {% if section.settings.background_image %}
      {{ section.settings.background_image | image_url: width: 1920 | image_tag:
         loading: 'eager',
         alt: section.settings.hero_title,
         sizes: '100vw'
      }}
    {% else %}
      <div style="width: 100%; height: 100%; background: linear-gradient(135deg, var(--color-black) 0%, var(--color-charcoal) 100%);"></div>
    {% endif %}
  </div>

  <!-- Overlay -->
  <div class="hero-overlay"></div>

  <!-- Floating Elements -->
  <div class="floating-element">
    <svg width="60" height="60" viewBox="0 0 24 24" fill="var(--color-electric-blue)">
      <circle cx="12" cy="12" r="10"/>
    </svg>
  </div>
  <div class="floating-element">
    <svg width="40" height="40" viewBox="0 0 24 24" fill="var(--color-neon-green)">
      <polygon points="12 2 15.09 8.26 22 9 17 14 18.18 21 12 17.77 5.82 21 7 14 2 9 8.91 8.26 12 2"/>
    </svg>
  </div>
  <div class="floating-element">
    <svg width="50" height="50" viewBox="0 0 24 24" fill="var(--color-electric-blue)">
      <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
    </svg>
  </div>

  <!-- Main Content -->
  <div class="hero-content">
    <div class="container container-premium">
      <div class="hero-grid">
        <div class="hero-text">
          <!-- Badge -->
          {% if section.settings.hero_badge %}
            <div class="hero-badge">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                <path d="M12 2l3.09 6.26L22 9l-5 4.87 1.18 6.88L12 17.77l-6.18 2.98L7 14.87 2 9l6.91-1.74L12 2z"/>
              </svg>
              {{ section.settings.hero_badge }}
            </div>
          {% endif %}

          <!-- Title -->
          <h1 class="hero-title">
            {% if section.settings.title_highlight %}
              {{ section.settings.hero_title | replace: section.settings.title_highlight, '<span class="hero-title-gradient">' | append: section.settings.title_highlight | append: '</span>' }}
            {% else %}
              {{ section.settings.hero_title | default: "FUEL YOUR <span class='hero-title-gradient'>GREATNESS</span>" }}
            {% endif %}
          </h1>

          <!-- Subtitle -->
          {% if section.settings.hero_subtitle %}
            <p class="hero-subtitle">{{ section.settings.hero_subtitle }}</p>
          {% endif %}

          <!-- Action Buttons -->
          <div class="hero-actions">
            {% if section.settings.primary_button_text %}
              <a href="{{ section.settings.primary_button_link | default: '/collections/all' }}" class="hero-primary-btn">
                {{ section.settings.primary_button_text }}
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </a>
            {% endif %}

            {% if section.settings.secondary_button_text %}
              <a href="{{ section.settings.secondary_button_link | default: '/pages/about' }}" class="hero-secondary-btn">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polygon points="5,3 19,12 5,21"/>
                </svg>
                {{ section.settings.secondary_button_text }}
              </a>
            {% endif %}
          </div>

          <!-- Stats -->
          {% if section.settings.show_stats %}
            <div class="hero-stats">
              <div class="stat-item">
                <span class="stat-number">{{ section.settings.stat_1_number | default: "50K+" }}</span>
                <span class="stat-label">{{ section.settings.stat_1_label | default: "Happy Customers" }}</span>
              </div>
              <div class="stat-item">
                <span class="stat-number">{{ section.settings.stat_2_number | default: "100+" }}</span>
                <span class="stat-label">{{ section.settings.stat_2_label | default: "Premium Products" }}</span>
              </div>
              <div class="stat-item">
                <span class="stat-number">{{ section.settings.stat_3_number | default: "24/7" }}</span>
                <span class="stat-label">{{ section.settings.stat_3_label | default: "Support" }}</span>
              </div>
            </div>
          {% endif %}
        </div>

        <!-- Optional: Product Showcase or Additional Content -->
        {% if section.settings.featured_product %}
          <div class="hero-product">
            {% assign product = all_products[section.settings.featured_product] %}
            {% if product %}
              <div class="card animate-slide-in-right">
                <div class="card-body p-6">
                  {{ product.featured_image | image_url: width: 400 | image_tag: loading: 'lazy' }}
                  <h3 class="text-xl font-bold mt-4">{{ product.title }}</h3>
                  <p class="text-gray-600 mt-2">{{ product.price | money }}</p>
                  <a href="{{ product.url }}" class="btn btn-primary mt-4">Shop Now</a>
                </div>
              </div>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="hero-scroll-indicator">
    <svg class="scroll-arrow" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <path d="M7 13l3 3 3-3M7 6l3 3 3-3"/>
    </svg>
  </div>
</section>

<script>
  // Parallax Effect
  document.addEventListener('scroll', function() {
    const scrolled = window.pageYOffset;
    const parallaxBg = document.querySelector('.parallax-bg');

    if (parallaxBg) {
      const speed = scrolled * 0.5;
      parallaxBg.style.transform = `translateY(${speed}px)`;
    }
  });

  // Enhanced scroll indicator interaction
  document.querySelector('.hero-scroll-indicator')?.addEventListener('click', function() {
    window.scrollTo({
      top: window.innerHeight,
      behavior: 'smooth'
    });
  });

  // Add loading animations on page load
  document.addEventListener('DOMContentLoaded', function() {
    const heroElements = document.querySelectorAll('.hero-badge, .hero-title, .hero-subtitle, .hero-actions, .hero-stats');

    heroElements.forEach((el, index) => {
      el.style.opacity = '0';
      el.style.transform = 'translateY(30px)';

      setTimeout(() => {
        el.style.transition = 'all 0.8s ease-out';
        el.style.opacity = '1';
        el.style.transform = 'translateY(0)';
      }, index * 200);
    });
  });
</script>

