<section class="premium-master-categories">
  <div class="categories-bg-pattern"></div>

  <div class="categories-container">

    <!-- Section Header -->
    <div class="categories-header">
      {% if section.settings.badge_text != blank %}
        <span class="categories-badge">{{ section.settings.badge_text }}</span>
      {% endif %}

      <h2 class="categories-heading">
        {{ section.settings.heading | default: 'SHOP BY' }}
        <span class="categories-heading-highlight">{{ section.settings.heading_highlight | default: 'CATEGORY' }}</span>
      </h2>

      {% if section.settings.description != blank %}
        <p class="categories-description">{{ section.settings.description }}</p>
      {% endif %}
    </div>

    <!-- Categories Grid -->
    <div class="categories-grid">
      {% for block in section.blocks %}
        <a
          href="{{ block.settings.collection.url | default: '/collections/all' }}"
          class="category-card {% if forloop.first and section.settings.featured_first %}featured{% endif %}"
          {{ block.shopify_attributes }}
        >
          <!-- Background Image -->
          {% if block.settings.image != blank %}
            <img
              src="{{ block.settings.image | image_url: width: 800 }}"
              alt="{{ block.settings.title }}"
              width="800"
              height="600"
              loading="lazy"
              class="category-image"
            >
          {% else %}
            <div style="
              width: 100%;
              height: 100%;
              background: linear-gradient(135deg, #1a1a1a 0%, #0a0a0a 100%);
            "></div>
          {% endif %}

          <!-- Overlay -->
          <div class="category-overlay"></div>

          <!-- Content -->
          <div class="category-content">
            {% if block.settings.icon != blank %}
              <div class="category-icon">{{ block.settings.icon }}</div>
            {% endif %}

            <h3 class="category-name">{{ block.settings.title | default: 'Category Name' }}</h3>

            {% if block.settings.description != blank %}
              <p class="category-description">{{ block.settings.description }}</p>
            {% endif %}

            {% if block.settings.collection != blank %}
              <span class="category-count">
                {{ block.settings.collection.products_count }} Products
              </span>
            {% endif %}
          </div>

          <!-- CTA Arrow -->
          <div class="category-arrow">‚Üí</div>
        </a>
      {% endfor %}
    </div>

    <!-- View All Button -->
    {% if section.settings.show_view_all %}
      <div class="categories-footer">
        <a href="{{ section.settings.view_all_link | default: '/collections' }}" class="view-all-button">
          <span>{{ section.settings.view_all_text | default: 'View All Categories' }}</span>
          <span class="view-all-arrow">‚Üí</span>
        </a>
      </div>
    {% endif %}

  </div>
</section>

