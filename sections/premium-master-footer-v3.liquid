<style>
  /* ========================================
     🎨 PREMIUM MASTER FOOTER VARIABLES
  ======================================== */
  :root {
    --footer-bg-primary: #000000;
    --footer-bg-secondary: #0a0a0a;
    --footer-text: rgba(255, 255, 255, 0.7);
    --footer-heading: #ffffff;
    --footer-accent: #007AFF;
  }

  /* ========================================
     💎 MAIN FOOTER STRUCTURE
  ======================================== */
  .premium-master-footer {
    background: linear-gradient(180deg, var(--footer-bg-primary) 0%, var(--footer-bg-secondary) 100%);
    color: var(--footer-text);
    position: relative;
    overflow: hidden;
  }

  /* Decorative Background Elements */
  .footer-bg-pattern {
    position: absolute;
    inset: 0;
    opacity: 0.03;
    background-image: 
      radial-gradient(circle at 20% 30%, rgba(0, 122, 255, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 70%, rgba(48, 209, 88, 0.1) 0%, transparent 50%);
    pointer-events: none;
  }

  .footer-container {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 40px;
    position: relative;
    z-index: 1;
  }

  /* ========================================
     🚀 TOP SECTION - Newsletter & Social
  ======================================== */
  .footer-top {
    padding: 80px 0 60px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
  }

  .footer-top-content {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .footer-newsletter {
    max-width: 600px;
  }

  .newsletter-heading {
    font-size: 42px;
    font-weight: 900;
    color: var(--footer-heading);
    margin-bottom: 16px;
    text-transform: uppercase;
    letter-spacing: -0.02em;
    background: linear-gradient(135deg, #ffffff 0%, #007AFF 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .newsletter-description {
    font-size: 16px;
    line-height: 1.6;
    margin-bottom: 30px;
    color: rgba(255, 255, 255, 0.6);
  }

  .newsletter-form {
    display: flex;
    gap: 12px;
    background: rgba(255, 255, 255, 0.05);
    padding: 8px;
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
  }

  .newsletter-form:focus-within {
    border-color: rgba(0, 122, 255, 0.5);
    box-shadow: 0 0 30px rgba(0, 122, 255, 0.2);
  }

  .newsletter-input {
    flex: 1;
    padding: 18px 24px;
    background: transparent;
    border: none;
    color: white;
    font-size: 15px;
    font-weight: 500;
    outline: none;
  }

  .newsletter-input::placeholder {
    color: rgba(255, 255, 255, 0.4);
  }

  .newsletter-button {
    padding: 18px 40px;
    background: linear-gradient(135deg, #007AFF 0%, #0056CC 100%);
    color: white;
    font-size: 15px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border: none;
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 20px rgba(0, 122, 255, 0.3);
  }

  .newsletter-button:hover {
    background: linear-gradient(135deg, #0056CC 0%, #003D99 100%);
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(0, 122, 255, 0.5);
  }

  /* Social Media Links */
  .footer-social {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
  }

  .social-heading {
    font-size: 18px;
    font-weight: 700;
    color: var(--footer-heading);
    margin-bottom: 24px;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .social-links {
    display: flex;
    gap: 16px;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 55px;
    height: 55px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 14px;
    color: rgba(255, 255, 255, 0.8);
    font-size: 24px;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .social-link:hover {
    background: linear-gradient(135deg, rgba(0, 122, 255, 0.3) 0%, rgba(48, 209, 88, 0.3) 100%);
    border-color: rgba(0, 122, 255, 0.5);
    transform: translateY(-5px) scale(1.1);
    box-shadow: 0 10px 30px rgba(0, 122, 255, 0.4);
  }

  /* ========================================
     📋 MIDDLE SECTION - Navigation Links
  ======================================== */
  .footer-middle {
    padding: 60px 0;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 2fr repeat(4, 1fr);
    gap: 50px;
  }

  /* Brand Column */
  .footer-brand {
    padding-right: 40px;
  }

  .footer-logo {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 24px;
  }

  .footer-logo-icon {
    width: 55px;
    height: 55px;
    background: linear-gradient(135deg, #007AFF 0%, #30D158 100%);
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28px;
    box-shadow: 0 4px 20px rgba(0, 122, 255, 0.3);
  }

  .footer-logo-text {
    font-size: 28px;
    font-weight: 900;
    color: white;
    text-transform: uppercase;
    letter-spacing: -0.02em;
  }

  .footer-brand-description {
    font-size: 15px;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 30px;
  }

  .footer-trust-badges {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }

  .trust-badge {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 16px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    font-size: 13px;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.7);
  }

  .trust-badge-icon {
    font-size: 18px;
  }

  /* Navigation Columns */
  .footer-column h4 {
    font-size: 16px;
    font-weight: 700;
    color: var(--footer-heading);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 24px;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li {
    margin-bottom: 14px;
  }

  .footer-links a {
    color: rgba(255, 255, 255, 0.6);
    font-size: 15px;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
    display: inline-block;
  }

  .footer-links a:hover {
    color: #007AFF;
    transform: translateX(5px);
  }

  /* ========================================
     🎯 BOTTOM SECTION - Legal & Payment
  ======================================== */
  .footer-bottom {
    padding: 30px 0;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 30px;
  }

  .footer-legal {
    display: flex;
    align-items: center;
    gap: 30px;
  }

  .footer-copyright {
    font-size: 14px;
    color: rgba(255, 255, 255, 0.4);
  }

  .footer-legal-links {
    display: flex;
    gap: 20px;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-legal-links a {
    color: rgba(255, 255, 255, 0.5);
    font-size: 13px;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer-legal-links a:hover {
    color: #007AFF;
  }

  /* Payment Methods */
  .footer-payment {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .payment-icon {
    width: 50px;
    height: 32px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    transition: all 0.2s ease;
  }

  .payment-icon:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: scale(1.05);
  }

  /* ========================================
     📱 RESPONSIVE DESIGN
  ======================================== */
  @media (max-width: 1200px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
      gap: 40px;
    }

    .footer-brand {
      grid-column: 1 / -1;
    }
  }

  @media (max-width: 768px) {
    .footer-container {
      padding: 0 20px;
    }

    .footer-top {
      padding: 60px 0 40px;
    }

    .footer-top-content {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .footer-social {
      align-items: flex-start;
    }

    .newsletter-heading {
      font-size: 32px;
    }

    .newsletter-form {
      flex-direction: column;
    }

    .footer-grid {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
    }

    .footer-legal {
      flex-direction: column;
      gap: 20px;
    }

    .footer-payment {
      justify-content: center;
    }
  }
</style>

<!-- ========================================
     🏆 PREMIUM MASTER FOOTER HTML
======================================== -->

<footer class="premium-master-footer">
  <div class="footer-bg-pattern"></div>
  
  <div class="footer-container">
    
    <!-- Top Section: Newsletter & Social -->
    <div class="footer-top">
      <div class="footer-top-content">
        <div class="footer-newsletter">
          <h2 class="newsletter-heading">{{ section.settings.newsletter_heading | default: 'Join The Movement' }}</h2>
          <p class="newsletter-description">
            {{ section.settings.newsletter_description | default: 'Get exclusive access to new products, workouts, and special offers. Join 100,000+ fitness enthusiasts worldwide.' }}
          </p>
          {% form 'customer', class: 'newsletter-form' %}
            <input 
              type="email" 
              name="contact[email]" 
              placeholder="Enter your email"
              class="newsletter-input"
              required
            >
            <button type="submit" class="newsletter-button">
              Subscribe
            </button>
          {% endform %}
        </div>

        <div class="footer-social">
          <h3 class="social-heading">Follow Us</h3>
          <div class="social-links">
            {% if section.settings.instagram_url != blank %}
              <a href="{{ section.settings.instagram_url }}" class="social-link" target="_blank" aria-label="Instagram">📷</a>
            {% endif %}
            {% if section.settings.facebook_url != blank %}
              <a href="{{ section.settings.facebook_url }}" class="social-link" target="_blank" aria-label="Facebook">📘</a>
            {% endif %}
            {% if section.settings.tiktok_url != blank %}
              <a href="{{ section.settings.tiktok_url }}" class="social-link" target="_blank" aria-label="TikTok">🎵</a>
            {% endif %}
            {% if section.settings.youtube_url != blank %}
              <a href="{{ section.settings.youtube_url }}" class="social-link" target="_blank" aria-label="YouTube">🎥</a>
            {% endif %}
          </div>
        </div>
      </div>
    </div>

    <!-- Middle Section: Navigation Links -->
    <div class="footer-middle">
      <div class="footer-grid">
        
        <!-- Brand Column -->
        <div class="footer-brand">
          <div class="footer-logo">
            <div class="footer-logo-icon">💪</div>
            <span class="footer-logo-text">{{ shop.name }}</span>
          </div>
          <p class="footer-brand-description">
            {{ section.settings.brand_description | default: 'Premium fitness gear for athletes who demand excellence. Built for performance, designed for champions.' }}
          </p>
          <div class="footer-trust-badges">
            <div class="trust-badge">
              <span class="trust-badge-icon">✓</span>
              <span>Secure Checkout</span>
            </div>
            <div class="trust-badge">
              <span class="trust-badge-icon">🚚</span>
              <span>Free Shipping</span>
            </div>
            <div class="trust-badge">
              <span class="trust-badge-icon">↩️</span>
              <span>Easy Returns</span>
            </div>
          </div>
        </div>

        <!-- Dynamic Columns from Blocks -->
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'column' %}
              <div class="footer-column">
                <h4>{{ block.settings.title }}</h4>
                <ul class="footer-links">
                  {% if block.settings.menu != blank %}
                    {% for link in linklists[block.settings.menu].links %}
                      <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                    {% endfor %}
                  {% endif %}
                </ul>
              </div>
          {% endcase %}
        {% endfor %}

      </div>
    </div>

    <!-- Bottom Section: Legal & Payment -->
    <div class="footer-bottom">
      <div class="footer-bottom-content">
        <div class="footer-legal">
          <p class="footer-copyright">
            {{ section.settings.copyright | default: '© 2025 All rights reserved' }}
          </p>
          <ul class="footer-legal-links">
            <li><a href="/pages/privacy-policy">Privacy Policy</a></li>
            <li><a href="/pages/terms-of-service">Terms of Service</a></li>
            <li><a href="/pages/shipping">Shipping Policy</a></li>
          </ul>
        </div>

        <div class="footer-payment">
          <div class="payment-icon">💳</div>
          <div class="payment-icon">🅿️</div>
          <div class="payment-icon">🔒</div>
        </div>
      </div>
    </div>

  </div>
</footer>

