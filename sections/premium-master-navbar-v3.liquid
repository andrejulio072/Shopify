<!--
========================================
🏆 GARCIA BUILDER - CLEAN NAVBAR V3.0
Premium Supplement Store | Minimalist Design
Inspired by: Myprotein, Transparent Labs, Legion Athletics
========================================
-->

<style>
  /* ========================================
     CLEAN NAVBAR - Minimalist Professional
  ======================================== */
  :root {
    --gb-black: #1a1a1a;
    --gb-white: #ffffff;
    --gb-gold: #d4af37;
    --gb-gray: #6b6b6b;
    --gb-light-gray: #f5f5f5;
  }

  /* Announcement Bar - Simple & Elegant */
  .gb-announcement-bar {
    background: var(--gb-black);
    padding: 10px 0;
    text-align: center;
    border-bottom: 1px solid rgba(212, 175, 55, 0.2);
  }

  .gb-announcement-bar p {
    color: var(--gb-white);
    font-size: 13px;
    font-weight: 500;
    letter-spacing: 0.5px;
    margin: 0;
  }

  .gb-announcement-bar span {
    color: var(--gb-gold);
    font-weight: 600;
  }

  /* Main Navbar - Clean White */
  .gb-navbar {
    position: sticky;
    top: 0;
    z-index: 9999;
    background: var(--gb-white);
    border-bottom: 1px solid #e5e5e5;
    transition: box-shadow 0.3s ease;
  }

  .gb-navbar.scrolled {
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  }

  .gb-navbar-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 40px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 80px;
  }

  /* Logo - Garcia Builder */
  .gb-logo {
    display: flex;
    align-items: center;
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  .gb-logo:hover {
    opacity: 0.8;
  }

  .gb-logo img {
    height: 55px;
    width: auto;
  }

  /* Navigation Menu - Minimalist */
  .gb-menu {
    display: flex;
    align-items: center;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 40px;
  }

  .gb-menu-link {
    color: var(--gb-black);
    font-size: 14px;
    font-weight: 500;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 1px;
    padding: 8px 0;
    border-bottom: 2px solid transparent;
    transition: all 0.3s ease;
  }

  .gb-menu-link:hover,
  .gb-menu-link.active {
    color: var(--gb-gold);
    border-bottom-color: var(--gb-gold);
  }

  /* Action Buttons - Simple Icons */
  .gb-actions {
    display: flex;
    align-items: center;
    gap: 24px;
  }

  .gb-action-btn {
    color: var(--gb-black);
    font-size: 20px;
    text-decoration: none;
    transition: color 0.3s ease;
    position: relative;
  }

  .gb-action-btn:hover {
    color: var(--gb-gold);
  }

  .gb-cart-count {
    position: absolute;
    top: -8px;
    right: -10px;
    background: var(--gb-gold);
    color: var(--gb-white);
    font-size: 10px;
    font-weight: 700;
    padding: 2px 6px;
    border-radius: 10px;
    min-width: 18px;
    text-align: center;
  }

  .gb-cta-btn {
    padding: 10px 24px;
    background: var(--gb-black);
    color: var(--gb-white);
    font-size: 13px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.3s ease;
  }

  .gb-cta-btn:hover {
    background: var(--gb-gold);
    color: var(--gb-black);
  }

  /* Mobile Toggle */
  .gb-mobile-toggle {
    display: none;
    flex-direction: column;
    gap: 4px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 4px;
  }

  .gb-mobile-toggle span {
    width: 24px;
    height: 2px;
    background: var(--gb-black);
    transition: all 0.3s ease;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .gb-menu {
      display: none;
    }

    .gb-mobile-toggle {
      display: flex;
    }

    .gb-navbar-container {
      padding: 0 24px;
    }

    .gb-cta-btn {
      display: none;
    }
  }

  @media (max-width: 640px) {
    .gb-navbar-container {
      height: 70px;
      padding: 0 16px;
    }

    .gb-logo img {
      height: 45px;
    }

    .gb-actions {
      gap: 16px;
    }

    .gb-action-btn {
      font-size: 18px;
    }
  }
</style>

<!-- Announcement Bar -->
<div class="gb-announcement-bar">
  <p>{{ section.settings.announcement_text | default: 'Frete Grátis em Pedidos Acima de <span>R$150</span> | Entrega Rápida' }}</p>
</div>

<!-- Main Navbar -->
<nav class="gb-navbar" id="gbNavbar">
  <div class="gb-navbar-container">
    <!-- Logo -->
    <a href="{{ routes.root_url }}" class="gb-logo">
      {% if section.settings.logo != blank %}
        <img src="{{ section.settings.logo | image_url: width: 110 }}" alt="{{ shop.name }}">
      {% else %}
        <img src="https://via.placeholder.com/110x55/1a1a1a/d4af37?text=GARCIA+BUILDER" alt="{{ shop.name }}">
      {% endif %}
    </a>

    <!-- Desktop Menu -->
    <ul class="gb-menu">
      {% for link in linklists[section.settings.menu].links %}
        <li>
          <a href="{{ link.url }}" class="gb-menu-link {% if link.active %}active{% endif %}">
            {{ link.title }}
          </a>
        </li>
      {% endfor %}
    </ul>

    <!-- Actions -->
    <div class="gb-actions">
      <a href="{{ routes.search_url }}" class="gb-action-btn" aria-label="Buscar">🔍</a>
      <a href="{{ routes.account_url }}" class="gb-action-btn" aria-label="Conta">👤</a>
      <a href="{{ routes.cart_url }}" class="gb-action-btn" aria-label="Carrinho">
        🛒
        <span class="gb-cart-count">{{ cart.item_count }}</span>
      </a>
      <a href="{{ section.settings.cta_link | default: routes.collections_url }}" class="gb-cta-btn">
        {{ section.settings.cta_text | default: 'Comprar' }}
      </a>
    </div>

    <!-- Mobile Toggle -->
    <button class="gb-mobile-toggle" aria-label="Menu">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</nav>

<script>
  window.addEventListener('scroll', () => {
    const navbar = document.getElementById('gbNavbar');
    navbar.classList.toggle('scrolled', window.scrollY > 20);
  });
</script>

{% schema %}
{
  "name": "Garcia Builder Navbar",
  "tag": "header",
  "class": "garcia-builder-header",
  "settings": [
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Texto Anúncio",
      "default": "Frete Grátis em Pedidos Acima de <span>R$150</span> | Entrega Rápida"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu Principal",
      "default": "main-menu"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Texto Botão CTA",
      "default": "Comprar"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Link Botão CTA"
    }
  ],
  "presets": [
    {
      "name": "Garcia Builder Navbar"
    }
  ]
}
{% endschema %}
