<link rel="stylesheet" href="{{ 'premium-v2.css' | asset_url }}">

<style>
  /* ========================================
     üé® PREMIUM PRODUCTS VARIABLES
  ======================================== */
  :root {
    --products-spacing: 120px;
    --product-card-radius: 20px;
  }

  /* ========================================
     üíé MAIN SECTION
  ======================================== */
  .premium-master-products {
    padding: var(--products-spacing) 40px;
    background: #000000;
    position: relative;
  }

  .products-container {
    max-width: 1600px;
    margin: 0 auto;
  }

  /* ========================================
     üìù SECTION HEADER
  ======================================== */
  .products-header {
    text-align: center;
    margin-bottom: 80px;
    animation: fade-slide-up 0.8s ease-out;
  }

  .products-badge {
    display: inline-block;
    padding: 10px 24px;
    background: linear-gradient(135deg, rgba(0, 122, 255, 0.2) 0%, rgba(48, 209, 88, 0.2) 100%);
    border: 1px solid rgba(0, 122, 255, 0.3);
    border-radius: 50px;
    color: #007AFF;
    font-size: 13px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: 24px;
  }

  .products-heading {
    font-size: clamp(42px, 6vw, 72px);
    font-weight: 900;
    color: white;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: -0.02em;
    line-height: 1.1;
  }

  .products-heading-highlight {
    background: linear-gradient(135deg, #007AFF 0%, #30D158 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .products-description {
    font-size: 18px;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.6);
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.7;
  }

  /* ========================================
     üéØ PRODUCTS GRID
  ======================================== */
  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 30px;
    margin-bottom: 60px;
  }

  /* Product Card */
  .product-card {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: var(--product-card-radius);
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    animation: fade-slide-up 0.8s ease-out backwards;
  }

  .product-card:nth-child(1) { animation-delay: 0.1s; }
  .product-card:nth-child(2) { animation-delay: 0.2s; }
  .product-card:nth-child(3) { animation-delay: 0.3s; }
  .product-card:nth-child(4) { animation-delay: 0.4s; }
  .product-card:nth-child(5) { animation-delay: 0.5s; }
  .product-card:nth-child(6) { animation-delay: 0.6s; }

  .product-card:hover {
    transform: translateY(-10px);
    border-color: rgba(0, 122, 255, 0.3);
    box-shadow: 0 20px 60px rgba(0, 122, 255, 0.3);
    background: rgba(255, 255, 255, 0.05);
  }

  /* Product Image Container */
  .product-image-wrapper {
    position: relative;
    aspect-ratio: 1 / 1;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.02);
  }

  .product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .product-card:hover .product-image {
    transform: scale(1.08);
  }

  /* Product Badges */
  .product-badges {
    position: absolute;
    top: 16px;
    left: 16px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    z-index: 2;
  }

  .product-badge {
    padding: 8px 16px;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(10px);
    border-radius: 8px;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .badge-new {
    color: #30D158;
    border: 1px solid rgba(48, 209, 88, 0.3);
  }

  .badge-sale {
    color: #FF3B30;
    border: 1px solid rgba(255, 59, 48, 0.3);
  }

  .badge-bestseller {
    color: #FF9500;
    border: 1px solid rgba(255, 149, 0, 0.3);
  }

  /* Quick Actions */
  .product-actions {
    position: absolute;
    top: 16px;
    right: 16px;
    display: flex;
    flex-direction: column;
    gap: 10px;
    opacity: 0;
    transform: translateX(20px);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .product-card:hover .product-actions {
    opacity: 1;
    transform: translateX(0);
  }

  .action-btn {
    width: 45px;
    height: 45px;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border: none;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 18px;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  .action-btn:hover {
    transform: scale(1.1);
    background: #007AFF;
    color: white;
  }

  /* Quick Add Button */
  .quick-add-btn {
    position: absolute;
    bottom: 16px;
    left: 16px;
    right: 16px;
    padding: 16px;
    background: linear-gradient(135deg, #007AFF 0%, #0056CC 100%);
    color: white;
    font-size: 15px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border: none;
    border-radius: 12px;
    cursor: pointer;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 8px 30px rgba(0, 122, 255, 0.5);
  }

  .product-card:hover .quick-add-btn {
    opacity: 1;
    transform: translateY(0);
  }

  .quick-add-btn:hover {
    background: linear-gradient(135deg, #0056CC 0%, #003D99 100%);
    transform: translateY(-2px);
  }

  /* Product Info */
  .product-info {
    padding: 24px;
  }

  /* Product Vendor */
  .product-vendor {
    font-size: 12px;
    font-weight: 600;
    color: #007AFF;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 8px;
  }

  /* Product Title */
  .product-title {
    font-size: 18px;
    font-weight: 700;
    color: white;
    margin-bottom: 12px;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    transition: color 0.3s ease;
  }

  .product-card:hover .product-title {
    color: #007AFF;
  }

  /* Product Rating */
  .product-rating {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 14px;
  }

  .rating-stars {
    color: #FF9500;
    font-size: 14px;
    letter-spacing: 2px;
  }

  .rating-count {
    font-size: 13px;
    color: rgba(255, 255, 255, 0.5);
  }

  /* Product Price */
  .product-price {
    display: flex;
    align-items: baseline;
    gap: 12px;
  }

  .price-current {
    font-size: 24px;
    font-weight: 900;
    color: white;
  }

  .price-original {
    font-size: 18px;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.4);
    text-decoration: line-through;
  }

  .price-discount {
    padding: 4px 10px;
    background: linear-gradient(135deg, #FF3B30 0%, #FF9500 100%);
    color: white;
    font-size: 12px;
    font-weight: 700;
    border-radius: 6px;
  }

  /* ========================================
     üöÄ VIEW ALL BUTTON
  ======================================== */
  .products-footer {
    text-align: center;
    animation: fade-slide-up 0.8s ease-out 0.8s backwards;
  }

  .view-all-button {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 20px 50px;
    background: linear-gradient(135deg, rgba(0, 122, 255, 0.2) 0%, rgba(48, 209, 88, 0.2) 100%);
    border: 2px solid rgba(0, 122, 255, 0.5);
    border-radius: 14px;
    color: white;
    font-size: 16px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    cursor: pointer;
    text-decoration: none;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .view-all-button::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #007AFF 0%, #30D158 100%);
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .view-all-button:hover::before {
    opacity: 1;
  }

  .view-all-button:hover {
    transform: translateY(-4px) scale(1.05);
    border-color: transparent;
    box-shadow: 0 15px 50px rgba(0, 122, 255, 0.6);
  }

  .view-all-button span {
    position: relative;
    z-index: 1;
  }

  /* ========================================
     üì± RESPONSIVE DESIGN
  ======================================== */
  @media (max-width: 1200px) {
    .products-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 992px) {
    .products-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .premium-master-products {
      padding: 80px 20px;
    }

    .products-header {
      margin-bottom: 50px;
    }

    .products-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .product-actions {
      opacity: 1;
      transform: translateX(0);
    }

    .quick-add-btn {
      opacity: 1;
      transform: translateY(0);
    }

    .view-all-button {
      width: 100%;
      justify-content: center;
    }
  }

  /* ========================================
     ‚ú® ANIMATIONS
  ======================================== */
  @keyframes fade-slide-up {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<!-- ========================================
     üèÜ PREMIUM PRODUCTS HTML
======================================== -->

<section class="premium-master-products">
  <div class="products-container">

    <!-- Section Header -->
    <div class="products-header">
      {% if section.settings.badge_text != blank %}
        <span class="products-badge">{{ section.settings.badge_text }}</span>
      {% endif %}

      <h2 class="products-heading">
        {{ section.settings.heading | default: 'FEATURED' }}
        <span class="products-heading-highlight">{{ section.settings.heading_highlight | default: 'PRODUCTS' }}</span>
      </h2>

      {% if section.settings.description != blank %}
        <p class="products-description">{{ section.settings.description }}</p>
      {% endif %}
    </div>

    <!-- Products Grid -->
    <div class="products-grid">
      {% assign collection = collections[section.settings.collection] %}
      {% assign product_limit = section.settings.products_to_show | default: 6 %}

      {% for product in collection.products limit: product_limit %}
        <div class="product-card">
          <!-- Product Image -->
          <div class="product-image-wrapper">
            {% if product.featured_image %}
              <img
                src="{{ product.featured_image | image_url: width: 600 }}"
                alt="{{ product.title }}"
                width="600"
                height="600"
                loading="lazy"
                class="product-image"
              >
            {% else %}
              <div style="
                width: 100%;
                height: 100%;
                background: linear-gradient(135deg, #1a1a1a 0%, #0a0a0a 100%);
              "></div>
            {% endif %}

            <!-- Badges -->
            <div class="product-badges">
              {% if product.tags contains 'new' %}
                <span class="product-badge badge-new">New</span>
              {% endif %}
              {% if product.compare_at_price > product.price %}
                <span class="product-badge badge-sale">Sale</span>
              {% endif %}
              {% if product.tags contains 'bestseller' %}
                <span class="product-badge badge-bestseller">Bestseller</span>
              {% endif %}
            </div>

            <!-- Quick Actions -->
            <div class="product-actions">
              <button class="action-btn" aria-label="Add to wishlist">‚ù§Ô∏è</button>
              <button class="action-btn" aria-label="Quick view">üëÅÔ∏è</button>
            </div>

            <!-- Quick Add Button -->
            <button class="quick-add-btn" data-product-id="{{ product.id }}">
              Quick Add
            </button>
          </div>

          <!-- Product Info -->
          <a href="{{ product.url }}" class="product-info">
            {% if product.vendor != blank %}
              <div class="product-vendor">{{ product.vendor }}</div>
            {% endif %}

            <h3 class="product-title">{{ product.title }}</h3>

            {% if section.settings.show_rating %}
              <div class="product-rating">
                <span class="rating-stars">‚òÖ‚òÖ‚òÖ‚òÖ‚òÖ</span>
                <span class="rating-count">(4.8)</span>
              </div>
            {% endif %}

            <div class="product-price">
              <span class="price-current">{{ product.price | money }}</span>
              {% if product.compare_at_price > product.price %}
                <span class="price-original">{{ product.compare_at_price | money }}</span>
                {% assign discount = product.compare_at_price | minus: product.price | times: 100 | divided_by: product.compare_at_price %}
                <span class="price-discount">-{{ discount }}%</span>
              {% endif %}
            </div>
          </a>
        </div>
      {% endfor %}
    </div>

    <!-- View All Button -->
    {% if section.settings.show_view_all %}
      <div class="products-footer">
        <a href="{{ collection.url | default: '/collections/all' }}" class="view-all-button">
          <span>{{ section.settings.view_all_text | default: 'View All Products' }}</span>
          <span>‚Üí</span>
        </a>
      </div>
    {% endif %}

  </div>
</section>

{% schema %}
{
  "name": "Premium Master Products",
  "tag": "section",
  "class": "premium-master-products-section",
  "settings": [
    {
      "type": "header",
      "content": "Section Header"
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "Best Sellers"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "FEATURED"
    },
    {
      "type": "text",
      "id": "heading_highlight",
      "label": "Heading Highlight",
      "default": "PRODUCTS"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Premium gear trusted by athletes worldwide"
    },
    {
      "type": "header",
      "content": "Products Settings"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to Show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 6
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "label": "Show Product Rating",
      "default": true
    },
    {
      "type": "header",
      "content": "View All Button"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show View All Button",
      "default": true
    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "Button Text",
      "default": "View All Products"
    }
  ],
  "presets": [
    {
      "name": "Premium Master Products"
    }
  ]
}
{% endschema %}
