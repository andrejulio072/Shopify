        </div>
      {% endif %}
      
      <h2 class="section-title">{{ section.settings.section_title | default: "O QUE NOSSOS CLIENTES DIZEM" }}</h2>
      
      {% if section.settings.section_subtitle %}
        <p class="section-subtitle">{{ section.settings.section_subtitle }}</p>
      {% endif %}
    </div>
    
    <!-- Reviews Stats -->
    <div class="reviews-stats">
      <div class="stat-item">
        <span class="stat-number">{{ section.settings.total_reviews | default: "15,847" }}</span>
        <span class="stat-label">Avalia√ß√µes</span>
      </div>
      
      <div class="stat-item">
        <span class="stat-number">{{ section.settings.average_rating | default: "4.9" }}</span>
        <div class="star-rating-large">
          <span class="star-large">‚òÖ</span>
          <span class="star-large">‚òÖ</span>
          <span class="star-large">‚òÖ</span>
          <span class="star-large">‚òÖ</span>
          <span class="star-large">‚òÖ</span>
        </div>
        <span class="stat-label">M√©dia de Estrelas</span>
      </div>
      
      <div class="stat-item">
        <span class="stat-number">{{ section.settings.satisfaction_rate | default: "98%" }}</span>
        <span class="stat-label">Satisfa√ß√£o</span>
      </div>
      
      <div class="stat-item">
        <span class="stat-number">{{ section.settings.recommendation_rate | default: "96%" }}</span>
        <span class="stat-label">Recomendam</span>
      </div>
    </div>
    
    <!-- Reviews Grid -->
    <div class="reviews-grid">
      
      {% for block in section.blocks %}
        {% if block.type == 'review' %}
          <div class="review-card">
            <div class="review-header">
              <div class="reviewer-avatar">
                {% if block.settings.reviewer_image %}
                  {{ block.settings.reviewer_image | image_url: width: 120 | image_tag: loading: 'lazy' }}
                {% else %}
                  {{ block.settings.reviewer_name | slice: 0 }}
                {% endif %}
              </div>
              
              <div class="reviewer-info">
                <div class="reviewer-name">{{ block.settings.reviewer_name | default: "Cliente Verificado" }}</div>
                <div class="reviewer-location">{{ block.settings.reviewer_location | default: "S√£o Paulo, SP" }}</div>
                
                <div class="review-rating">
                  {% assign rating = block.settings.rating | default: 5 %}
                  {% for i in (1..5) %}
                    {% if i <= rating %}
                      <span class="star">‚òÖ</span>
                    {% else %}
                      <span class="star empty">‚òÖ</span>
                    {% endif %}
                  {% endfor %}
                </div>
              </div>
            </div>
            
            <div class="review-content">
              {% if block.settings.review_title %}
                <h3 class="review-title">{{ block.settings.review_title }}</h3>
              {% endif %}
              
              <p class="review-text">{{ block.settings.review_text | default: "Produto excelente, superou minhas expectativas!" }}</p>
              
              {% if block.settings.product_image %}
                <div class="review-product">
                  {{ block.settings.product_image | image_url: width: 100 | image_tag: loading: 'lazy', class: 'review-product-image' }}
                  <div class="review-product-info">
                    <div class="review-product-name">{{ block.settings.product_name | default: "Whey Protein" }}</div>
                    <div class="review-product-variant">{{ block.settings.product_variant | default: "Sabor Chocolate" }}</div>
                  </div>
                </div>
              {% endif %}
            </div>
            
            <div class="review-footer">
              <span class="review-date">{{ block.settings.review_date | default: "H√° 2 dias" }}</span>
              {% if block.settings.verified %}
                <span class="review-verified">
                  <svg width="12" height="12" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M9 12l2 2 4-4"/>
                  </svg>
                  Verificado
                </span>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
      
    </div>
    
    <!-- Photo Reviews -->
    {% if section.settings.show_photo_reviews %}
      <div class="photo-reviews">
        <h3 class="photo-reviews-title">{{ section.settings.photo_reviews_title | default: "RESULTADOS REAIS DOS NOSSOS CLIENTES" }}</h3>
        
        <div class="photo-reviews-grid">
          {% for block in section.blocks %}
            {% if block.type == 'photo_review' %}
              <div class="photo-review">
                {% if block.settings.photo %}
                  {{ block.settings.photo | image_url: width: 400 | image_tag: loading: 'lazy' }}
                {% endif %}
                
                <div class="photo-review-overlay">
                  <div class="photo-review-stars">
                    {% assign rating = block.settings.photo_rating | default: 5 %}
                    {% for i in (1..rating) %}
                      <span class="star">‚òÖ</span>
                    {% endfor %}
                  </div>
                  <div class="photo-review-name">{{ block.settings.photo_reviewer_name | default: "Cliente" }}</div>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    {% endif %}
    
    <!-- CTA Section -->
    {% if section.settings.show_cta %}
      <div class="reviews-cta">
        <h3 class="cta-title">{{ section.settings.cta_title | default: "JUNTE-SE A MILHARES DE CLIENTES SATISFEITOS" }}</h3>
        <p class="cta-subtitle">{{ section.settings.cta_subtitle | default: "Experimente nossos produtos premium e veja por que somos a escolha n√∫mero 1" }}</p>
        
        <a href="{{ section.settings.cta_link | default: '/collections/all' }}" class="cta-button">
          {{ section.settings.cta_text | default: "COMPRAR AGORA" }}
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    {% endif %}
    
  </div>
</section>

