<style>
  .premium-social-proof {
    padding: 100px 0;
    background: #ffffff;
    position: relative;
    overflow: hidden;
  }

  .premium-social-proof::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 50%, #f8f9fa 100%);
    opacity: 0.5;
  }

  .premium-social-proof__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 2;
  }

  .premium-social-proof__header {
    text-align: center;
    margin-bottom: 60px;
  }

  .premium-social-proof__badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: #f8f9fa;
    color: #2c3e50;
    padding: 8px 16px;
    border-radius: 25px;
    font-size: 14px;
    font-weight: 600;
    margin-bottom: 20px;
    border: 1px solid #e9ecef;
  }

  .premium-social-proof__title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 800;
    color: #000000;
    margin-bottom: 15px;
    letter-spacing: -0.02em;
  }

  .premium-social-proof__subtitle {
    font-size: 18px;
    color: #6c757d;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .premium-social-proof__stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 40px;
    margin-bottom: 80px;
  }

  .stat-card {
    text-align: center;
    padding: 30px 20px;
    background: rgba(255, 255, 255, 0.8);
    border-radius: 12px;
    border: 1px solid #f1f3f4;
    transition: all 0.3s ease;
  }

  .stat-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.08);
    border-color: #e9ecef;
  }

  .stat-card__number {
    font-size: 3rem;
    font-weight: 800;
    color: #000000;
    margin-bottom: 10px;
    line-height: 1;
    display: block;
  }

  .stat-card__label {
    font-size: 16px;
    color: #6c757d;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .premium-social-proof__testimonials {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 30px;
    margin-bottom: 60px;
  }

  .testimonial-card {
    background: #ffffff;
    padding: 30px;
    border-radius: 12px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.06);
    border: 1px solid #f1f3f4;
    transition: all 0.3s ease;
    position: relative;
  }

  .testimonial-card::before {
    content: '"';
    position: absolute;
    top: -10px;
    left: 30px;
    font-size: 60px;
    color: #f8f9fa;
    font-family: serif;
    line-height: 1;
  }

  .testimonial-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
    border-color: #e9ecef;
  }

  .testimonial-card__rating {
    display: flex;
    gap: 2px;
    margin-bottom: 15px;
  }

  .testimonial-card__star {
    color: #ffc107;
    font-size: 16px;
  }

  .testimonial-card__quote {
    font-size: 16px;
    line-height: 1.6;
    color: #2c3e50;
    margin-bottom: 25px;
    font-style: italic;
  }

  .testimonial-card__author {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  .testimonial-card__avatar {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    object-fit: cover;
    border: 2px solid #f8f9fa;
  }

  .testimonial-card__avatar--placeholder {
    background: linear-gradient(135deg, #e9ecef 0%, #dee2e6 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #6c757d;
    font-weight: 600;
    font-size: 18px;
  }

  .testimonial-card__info {
    flex: 1;
  }

  .testimonial-card__name {
    font-weight: 600;
    color: #000000;
    margin-bottom: 2px;
    font-size: 14px;
  }

  .testimonial-card__details {
    font-size: 12px;
    color: #6c757d;
  }

  .testimonial-card__verified {
    color: #28a745;
    font-size: 12px;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 4px;
    margin-top: 5px;
  }

  .premium-social-proof__logos {
    text-align: center;
    margin-bottom: 60px;
  }

  .premium-social-proof__logos-title {
    font-size: 14px;
    color: #6c757d;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 30px;
    font-weight: 600;
  }

  .premium-social-proof__logos-grid {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 40px;
    flex-wrap: wrap;
    opacity: 0.6;
  }

  .premium-social-proof__logo {
    height: 40px;
    filter: grayscale(100%);
    transition: all 0.3s ease;
  }

  .premium-social-proof__logo:hover {
    filter: grayscale(0%);
    opacity: 1;
  }

  .premium-social-proof__reviews {
    background: #f8f9fa;
    border-radius: 12px;
    padding: 40px;
    text-align: center;
    border: 1px solid #f1f3f4;
  }

  .premium-social-proof__reviews-header {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 15px;
    margin-bottom: 20px;
  }

  .premium-social-proof__reviews-rating {
    font-size: 24px;
    color: #ffc107;
  }

  .premium-social-proof__reviews-score {
    font-size: 32px;
    font-weight: 800;
    color: #000000;
  }

  .premium-social-proof__reviews-text {
    color: #6c757d;
    margin-bottom: 20px;
  }

  .premium-social-proof__reviews-link {
    color: #000000;
    text-decoration: none;
    font-weight: 600;
    border-bottom: 2px solid #000000;
    transition: opacity 0.3s ease;
  }

  .premium-social-proof__reviews-link:hover {
    opacity: 0.7;
    color: #000000;
  }

  /* Responsive */
  @media screen and (max-width: 990px) {
    .premium-social-proof {
      padding: 80px 0;
    }

    .premium-social-proof__stats {
      grid-template-columns: repeat(2, 1fr);
      gap: 30px;
      margin-bottom: 60px;
    }

    .premium-social-proof__testimonials {
      grid-template-columns: 1fr;
      gap: 25px;
    }

    .premium-social-proof__logos-grid {
      gap: 30px;
    }
  }

  @media screen and (max-width: 768px) {
    .premium-social-proof {
      padding: 60px 0;
    }

    .premium-social-proof__container {
      padding: 0 15px;
    }

    .premium-social-proof__stats {
      grid-template-columns: 1fr;
      gap: 20px;
      margin-bottom: 50px;
    }

    .stat-card {
      padding: 25px 15px;
    }

    .stat-card__number {
      font-size: 2.5rem;
    }

    .testimonial-card {
      padding: 25px;
    }

    .premium-social-proof__reviews {
      padding: 30px 20px;
    }

    .premium-social-proof__reviews-header {
      flex-direction: column;
      gap: 10px;
    }

    .premium-social-proof__logos-grid {
      gap: 20px;
    }

    .premium-social-proof__logo {
      height: 30px;
    }
  }

  /* Animation */
  .stat-card,
  .testimonial-card {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.6s ease forwards;
  }

  .stat-card:nth-child(1) { animation-delay: 0.1s; }
  .stat-card:nth-child(2) { animation-delay: 0.2s; }
  .stat-card:nth-child(3) { animation-delay: 0.3s; }
  .stat-card:nth-child(4) { animation-delay: 0.4s; }

  .testimonial-card:nth-child(1) { animation-delay: 0.5s; }
  .testimonial-card:nth-child(2) { animation-delay: 0.6s; }
  .testimonial-card:nth-child(3) { animation-delay: 0.7s; }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<section class="premium-social-proof">
  <div class="premium-social-proof__container">
    
    <!-- Header -->
    <div class="premium-social-proof__header">
      {%- unless section.settings.badge_text == blank -%}
        <div class="premium-social-proof__badge">
          <span>✨</span>
          <span>{{ section.settings.badge_text }}</span>
        </div>
      {%- endunless -%}

      <h2 class="premium-social-proof__title">{{ section.settings.title | default: 'O Que Nossos Clientes Dizem' }}</h2>
      
      {%- unless section.settings.subtitle == blank -%}
        <p class="premium-social-proof__subtitle">{{ section.settings.subtitle }}</p>
      {%- endunless -%}
    </div>

    <!-- Stats -->
    {%- if section.settings.show_stats -%}
      <div class="premium-social-proof__stats">
        <div class="stat-card">
          <span class="stat-card__number">{{ section.settings.stat1_number | default: '50k+' }}</span>
          <span class="stat-card__label">{{ section.settings.stat1_label | default: 'Clientes Satisfeitos' }}</span>
        </div>
        <div class="stat-card">
          <span class="stat-card__number">{{ section.settings.stat2_number | default: '4.9★' }}</span>
          <span class="stat-card__label">{{ section.settings.stat2_label | default: 'Avaliação Média' }}</span>
        </div>
        <div class="stat-card">
          <span class="stat-card__number">{{ section.settings.stat3_number | default: '98%' }}</span>
          <span class="stat-card__label">{{ section.settings.stat3_label | default: 'Recomendam' }}</span>
        </div>
        <div class="stat-card">
          <span class="stat-card__number">{{ section.settings.stat4_number | default: '24h' }}</span>
          <span class="stat-card__label">{{ section.settings.stat4_label | default: 'Entrega Rápida' }}</span>
        </div>
      </div>
    {%- endif -%}

    <!-- Testimonials -->
    <div class="premium-social-proof__testimonials">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'testimonial' -%}
            <div class="testimonial-card" {{ block.shopify_attributes }}>
              <div class="testimonial-card__rating">
                {%- assign rating = block.settings.rating | default: 5 -%}
                {%- for i in (1..5) -%}
                  <span class="testimonial-card__star">
                    {%- if i <= rating -%}⭐{%- else -%}☆{%- endif -%}
                  </span>
                {%- endfor -%}
              </div>

              {%- unless block.settings.quote == blank -%}
                <p class="testimonial-card__quote">{{ block.settings.quote }}</p>
              {%- endunless -%}

              <div class="testimonial-card__author">
                {%- if block.settings.avatar != blank -%}
                  {{
                    block.settings.avatar
                    | image_url: width: 100
                    | image_tag:
                      class: 'testimonial-card__avatar',
                      alt: block.settings.name | escape
                  }}
                {%- else -%}
                  <div class="testimonial-card__avatar testimonial-card__avatar--placeholder">
                    {{ block.settings.name | default: 'Cliente' | truncate: 1, '' | upcase }}
                  </div>
                {%- endif -%}

                <div class="testimonial-card__info">
                  <div class="testimonial-card__name">{{ block.settings.name | default: 'Cliente Verificado' }}</div>
                  <div class="testimonial-card__details">{{ block.settings.location | default: 'Brasil' }}</div>
                  {%- if block.settings.verified -%}
                    <div class="testimonial-card__verified">
                      <span>✓</span>
                      <span>Compra Verificada</span>
                    </div>
                  {%- endif -%}
                </div>
              </div>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>

    <!-- Partner Logos -->
    {%- if section.settings.show_logos -%}
      <div class="premium-social-proof__logos">
        <p class="premium-social-proof__logos-title">{{ section.settings.logos_title | default: 'Trusted by leading brands' }}</p>
        <div class="premium-social-proof__logos-grid">
          {%- for i in (1..6) -%}
            {%- assign logo_setting = 'logo_' | append: i -%}
            {%- if section.settings[logo_setting] != blank -%}
              {{
                section.settings[logo_setting]
                | image_url: width: 120
                | image_tag:
                  class: 'premium-social-proof__logo',
                  alt: 'Partner logo'
              }}
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}

    <!-- Reviews Summary -->
    {%- if section.settings.show_reviews_summary -%}
      <div class="premium-social-proof__reviews">
        <div class="premium-social-proof__reviews-header">
          <div class="premium-social-proof__reviews-rating">⭐⭐⭐⭐⭐</div>
          <div class="premium-social-proof__reviews-score">{{ section.settings.reviews_score | default: '4.9' }}</div>
        </div>
        <p class="premium-social-proof__reviews-text">
          Baseado em {{ section.settings.reviews_count | default: '2.847' }} avaliações verificadas
        </p>
        {%- unless section.settings.reviews_link == blank -%}
          <a href="{{ section.settings.reviews_link }}" class="premium-social-proof__reviews-link">
            Ver todas as avaliações
          </a>
        {%- endunless -%}
      </div>
    {%- endif -%}

  </div>
</section>

