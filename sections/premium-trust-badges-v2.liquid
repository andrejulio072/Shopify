<link rel="stylesheet" href="{{ 'premium-v2.css' | asset_url }}">

<style>
  .premium-trust-badges-v2 {
    padding: var(--space-12) 0;
    background: linear-gradient(135deg, var(--color-gray-50) 0%, var(--color-white) 100%);
    border-top: 1px solid var(--color-gray-100);
    border-bottom: 1px solid var(--color-gray-100);
  }

  .trust-badges-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-6);
    align-items: center;
  }

  .trust-badge {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-4);
    background: var(--color-white);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-sm);
    transition: var(--transition-normal);
    text-align: left;
  }

  .trust-badge:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .trust-badge-icon {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    background: linear-gradient(135deg, var(--color-electric-blue) 0%, var(--color-neon-green) 100%);
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-white);
    font-size: 24px;
  }

  .trust-badge-content {
    flex: 1;
  }

  .trust-badge-title {
    font-size: var(--text-sm);
    font-weight: var(--font-bold);
    color: var(--color-black);
    margin-bottom: var(--space-1);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .trust-badge-text {
    font-size: var(--text-xs);
    color: var(--color-gray-600);
    line-height: 1.4;
  }

  /* Guarantee Section */
  .guarantee-section {
    margin-top: var(--space-16);
    text-align: center;
    padding: var(--space-12);
    background: linear-gradient(135deg, var(--color-black) 0%, var(--color-charcoal) 100%);
    border-radius: var(--radius-2xl);
    color: var(--color-white);
    position: relative;
    overflow: hidden;
  }

  .guarantee-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="50" cy="50" r="2" fill="rgba(0,122,255,0.1)"/></svg>') repeat;
    opacity: 0.3;
    animation: float 20s linear infinite;
  }

  .guarantee-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    background: linear-gradient(135deg, var(--color-neon-green) 0%, #28B946 100%);
    color: var(--color-white);
    padding: var(--space-2) var(--space-4);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-6);
  }

  .guarantee-title {
    font-size: var(--text-3xl);
    font-weight: var(--font-black);
    margin-bottom: var(--space-4);
    text-transform: uppercase;
    letter-spacing: -0.02em;
  }

  .guarantee-subtitle {
    font-size: var(--text-lg);
    opacity: 0.9;
    margin-bottom: var(--space-8);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
  }

  .guarantee-features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-6);
    margin-top: var(--space-8);
  }

  .guarantee-feature {
    text-align: center;
  }

  .guarantee-feature-icon {
    width: 60px;
    height: 60px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-full);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto var(--space-3);
    font-size: 28px;
    backdrop-filter: blur(10px);
  }

  .guarantee-feature-title {
    font-size: var(--text-base);
    font-weight: var(--font-bold);
    margin-bottom: var(--space-2);
    color: var(--color-white);
  }

  .guarantee-feature-text {
    font-size: var(--text-sm);
    opacity: 0.8;
    line-height: 1.5;
  }

  /* Security Badges */
  .security-badges {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-6);
    margin-top: var(--space-12);
    flex-wrap: wrap;
  }

  .security-badge {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-4);
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-lg);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .security-badge-icon {
    font-size: 20px;
  }

  .security-badge-text {
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .trust-badges-grid {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }

    .guarantee-features {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }

    .security-badges {
      gap: var(--space-3);
    }
  }

  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
  }
</style>

